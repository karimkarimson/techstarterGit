extends layout

block content

  h1 #{title}: #{book.title}
  p #[strong Author:]
    a(href=book.author.url) #{book.author.name}
  p #[strong Summary:] #{book.summary}
  p #[strong ISBN:] #{book.isbn}
  p #[strong Genre:]
    each value in book.genre
      a(href=value.url) #{value.name}
      |,
  hr

  if book_instances.length

    p #[strong Delete the following book instances before attempting to delete this book.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Book Instances

      each bookVal in book_instances 
        hr
        p #[strong Id:] #{bookVal._id}
        if bookVal.status == 'Available'
          p.text-success #{bookVal.status}
        else if bookVal.status == 'Maintanence'
          p.text-danger #{bookVal.status}
        else 
          p.text-warning #{bookVal.status}
        p #[strong Imprint:] #{bookVal.imprint}
        if bookVal.status != 'Available'
          p #[strong Due back:] #{bookVal.due_back}
        p #[strong Id:]
          a(href=bookVal.url) #{bookVal._id}


  else
    p Do you really want to delete this Book?

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden',name='bookid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete